extends layout

block content
  h1= title
  p Inviting to #{title}
  input(type ="button", class="btn btn-primary btn-sm" value = "Press Me" onClick="update()")
  <br>
  <br>
  div(id = "target") Display
  a(Type="button", href="/Language") link to Language list

  script.
    var client_count=0
    function update(){
      client_count += 1;
      document.getElementById('target').innerHTML = "Value now : " + client_count
    };
